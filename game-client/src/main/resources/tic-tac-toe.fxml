        <Button fx:id="btn5" prefWidth="100" prefHeight="100" onAction="#handleButtonClick" text=" " style="-fx-font-size: 40px;" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <Button fx:id="btn6" prefWidth="100" prefHeight="100" onAction="#handleButtonClick" text=" " style="-fx-font-size: 40px;" GridPane.columnIndex="2" GridPane.rowIndex="1" />
        
        <Button fx:id="btn7" prefWidth="100" prefHeight="100" onAction="#handleButtonClick" text=" " style="-fx-font-size: 40px;" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <Button fx:id="btn8" prefWidth="100" prefHeight="100" onAction="#handleButtonClick" text=" " style="-fx-font-size: 40px;" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <Button fx:id="btn9" prefWidth="100" prefHeight="100" onAction="#handleButtonClick" text=" " style="-fx-font-size: 40px;" GridPane.columnIndex="2" GridPane.rowIndex="2" />
    </GridPane>
